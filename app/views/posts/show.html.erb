<%= content_for :title do %>
  <%= @post.title %>
<% end %>

<div class="mx-w-7xl w-full max-auto py-24 px-8">
  <% if Current&.session&.user&.admin? %>
    <div class="flex mb-8 gap-2">
      <%= link_to "Edit this Post", edit_admin_post_path(@post), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 border border-blue-700 rounded" %>
      <%= button_to "Delete this Post", admin_post_path(@post), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this post?" }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 border border-red-700 rounded" %>

    </div>
  <% end %>
  <nav class="flex px-5 py-3 text-gray-700" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
      <li class="inline-flex items-center">
        <a href="/posts" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue">
          <svg class="w-3 h-3 me-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
            <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
          </svg>
          Home
        </a>
      </li>
      <li>
        <div class="flex items-center">
          <svg class="rtl:rotate-180 block w-3 h-3 mx-1 text-gray-400 " aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
          </svg>
          <a href="#" class="ms-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ms-2 dark:text-gray-400 dark:hover:text-blue"><%= @post.title %></a>
        </div>
      </li>
    </ol>
  </nav>
  <br/>
  <%= image_tag @post.banner_image, class: "w-full h-80 object-cover" %>
  <h1 class="text-5xl text-gray-900 mt-8 ">
    <%= @post.title %>
  </h1>
  <div class="mt-8 text-xl">
    <%= @post.body %>
  </div>
</div>