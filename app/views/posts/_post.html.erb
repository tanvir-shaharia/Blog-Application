<div class="rounded overflow-hidden shadow-lg">
  <%= image_tag(post.banner_image, class: "w-full", alt: post.title) if post.banner_image.attached? %>
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2"><%= post.title %></div>
    <p class="text-gray-700 text-base">
      <%= post.body.body.to_plain_text.first(150) %> ...
    </p>
  </div>
  <div class="px-6 pt-4 pb-2">
    <div class="px-6 pt-4 pb-2">
      <%= link_to "Read More", post_url(post), class: "inline-block bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
</div>